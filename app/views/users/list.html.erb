<h1>登録ユーザーの一覧</h1>
<div class="row">
	<div class="col col-md-offset-2 col-md-8">
		<ul style="list-style: none;" class="followlists">
			<% @users.each do |user| %>
				<li class="clearfix">
					<%= link_to gravatar_for(user, size: 50), user %>
					<span class="user"><%= link_to user.name, user %></span>
					<span class="content"><%= user.profile %></span>
				</li>
			<% end %>
		</ul>
	</div>
	<div class="col col-md-2">
	</div>
</div>