<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
      <% if @user == current_user %>
        <%= link_to "following", followings_user_path(current_user) %>  (<%= @followings.count %>)
        <br>
        <%= link_to "followed", followers_user_path(current_user) %> (<%= @followers.count %>)
      <% else %>
        following (<%= @followings.count %>)
        <br>
        followed (<%= @followers.count %>)
      <% end %>
		</section>
    <div class="panel panel-info">
      <div class="panel-heading">
        プロフィール
      </div>
      <div class="panel-body">
        <%= @user.profile %>
      </div>
    </div>
      
    <div class="panel panel-warning">
      <div class="panel-heading">
        メールアドレス
      </div>
      <div class="panel-body">
        <%= @user.email %>
      </div>
    </div>
      
    <div class="panel panel-danger">
      <div class="panel-heading">
        地域
      </div>
      <div class="panel-body">
        <%= @user.area %>
      </div>
    </div>
      
    <div class="panel panel-success">
      <div class="panel-heading">
        Web
      </div>
      <div class="panel-body">
        <%= @user.website %>
      </div>
    </div>
	</aside>

	<div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
		<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
      <div style="text-align: center;">
        <%= paginate @pages %>
      </div>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
		<% end %>
    <div style="text-align: center;">
      <%= paginate @pages %>
    </div>
	</div>
</div>

<div class="form-horizontal">
  <% if @user.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @user.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
</div>
