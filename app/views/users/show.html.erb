<h1>
	<%= gravatar_for @user %>
	<%= @user.name %>
</h1>
<div class="form-horizontal">
  <% if @user.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @user.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="row">
      
      <div class="col col-sm-offset-2 col-sm-8">
        <div class="panel panel-info">
          <div class="panel-heading">
          プロフィール
          </div>
          <div class="panel-body">
          <%= @user.profile %>
          </div>
        </div>
      </div>
      <div class="col-sm-2">
      </div>

      <div class="col col-sm-offset-2 col-sm-8">
        <div class="panel panel-warning">
          <div class="panel-heading">
          メールアドレス
          </div>
          <div class="panel-body">
          <%= @user.email %>
          </div>
        </div>
      </div>
      <div class="col-sm-2">
      </div>

      <div class="col col-sm-offset-2 col-sm-8">
        <div class="panel panel-danger">
          <div class="panel-heading">
          地域
          </div>
          <div class="panel-body">
          <%= @user.area %>
          </div>
        </div>
      </div>
      <div class="col-sm-2">
      </div>
      
      <div class="col col-sm-offset-2 col-sm-8">
        <div class="panel panel-success">
          <div class="panel-heading">
          Web
          </div>
          <div class="panel-body">
          <%= @user.website %>
          </div>
        </div>
      </div>
      <div class="col-sm-2">
      </div>
  
    </div>
  </div>
</div>