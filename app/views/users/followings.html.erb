<h1><%= @user.name %>さんがフォローしている人</h1>
<div class="row">
	<div class="col col-md-offset-2 col-md-8">
		<% @followings.each do |following| %>
		<span class="followlists">
			<li>
				<%= link_to gravatar_for(following, size: 50), following %>
				<span class="user"><%= link_to following.name, following %></span>
				<span class="content"><%= following.profile %></span>
			</li>
		</span>
		<% end %>
	</div>
	<div class="col col-md-2">
	</div>
</div>